/ ================================================
/ / (periodic_atoms/newまたはeditのフォーム画面)
/ ================================================

- if periodic_atom.errors.present?
  ul#error_explanation.bg-danger.text-white
    - periodic_atom.errors.full_messages.each do |message|
      li = message

ul.__ul
  - if current_user
    / li.__li = link_to '原子の追加', new_periodic_atom_path, class: 'btn__bump'
    / li.__li = link_to '原子の編集', edit_periodic_atom_path(periodic_atom_url), class: 'btn__bump'
    li.__li = link_to '周期表', periodic_atoms_path, class: 'btn__bump'

= form_with model: periodic_atom, local: true do |f|
  .form__group
    = f.label :id, class: 'form__label'
    = f.number_field :id,
      class: 'form__control_tex'

    = f.label :name, class: 'form__label'
    = f.text_field :name,
      class: 'form__control_tex'

    = f.label :symbol, class: 'form__label'
    = f.text_field :symbol,
      class: 'form__control_tex'

    = f.label :atomic_num, class: 'form__label'
    = f.number_field :atomic_num,
      class: 'form__control_tex'

    = f.label :group, class: 'form__label'
    = f.number_field :group,
      class: 'form__control_tex'

    = f.label :period, class: 'form__label'
    = f.number_field :period,
      class: 'form__control_tex'

    = f.label :weight, class: 'form__label'
    = f.number_field :weight,
      step: '0.00001',
      class: 'form__control_tex'

    = f.label :electron_shells_id, class: 'form__label'
    = f.number_field :electron_shells_id,
      class: 'form__control_tex'
  / 登録ボタン
  = f.submit nil, class: 'btn__submit'
